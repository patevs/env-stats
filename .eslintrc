{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
		"eslint:recommended",
		"plugin:prettier/recommended"
	],
    "parserOptions": {
        "ecmaVersion": 2018
	},
	"plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
